                   "${dirPathLessonUpdateByLtCtWE}" \
                   "${filePathLessonUpdateByLtCtTE}" \
                   "${filePathLessonUpdateByLtCtTC}" \
                   "${filePathLessonUpdateByLtCtTP}"

