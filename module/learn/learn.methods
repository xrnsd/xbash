            COMPREPLY=( $(compgen -W "analysis imitate" -- "$cur") )
            ;;
        -m | -unlt | -ap | -aiq)
            COMPREPLY=( $(compgen -W "$(ls --file-type $dirPathTempEng |grep / | awk -F/ '{print $1}')" -- "$cur") )
